{{>userheader}}
<div class="usr">
    {{#each user}}
    <header id="main-header">
        <h1 class="text-black mt-24 text-5xl">{{name}} Welcome to Libratech</h1> <br>
        <br>
    </header>
    {{/each}}
</div>

<div class="container mx-auto py-8">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div class="bg-white p-6 rounded-lg shadow-md">
            <h2 class="text-lg font-semibold text-gray-800 mb-4">Total Books Available</h2>
            <div class="flex items-center justify-center">
                <span class="text-5xl font-bold text-blue-600">{{totalBooks}}</span>
            </div>
        </div>

        <div class="bg-white p-6 rounded-lg shadow-md">
            <h2 class="text-lg font-semibold text-gray-800 mb-4">Total Category Available</h2>
            <div class="flex items-center justify-center">
                <span class="text-5xl font-bold text-green-600">6</span>
            </div>
        </div>

        <div class="bg-white p-6 rounded-lg shadow-md">
            <h2 class="text-lg font-semibold text-gray-800 mb-4">Issued Books</h2>
            <div class="flex items-center justify-center">
                <span class="text-5xl font-bold text-red-600">{{records}}</span>
            </div>
        </div>

    </div>
</div>
{{>footer}}